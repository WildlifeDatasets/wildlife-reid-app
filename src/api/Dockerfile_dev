FROM python:3.9.16-slim

COPY ./src/api/requirements.txt /api/requirements.txt

# install system dependencies
RUN apt-get update --yes &&  \
    apt-get install --yes \
    wget \
    unzip && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# install python dependencies
ENV APP_DIR='/api'
WORKDIR $APP_DIR
RUN pip install --no-cache-dir --upgrade pip build && \
    pip install --no-cache-dir --compile -r requirements.txt && \
    rm -rf /var/lib/apt/lists/* /var/cache/apt/* /tmp/* /var/tmp/*

# Get Boostrap style
ENV STATIC_DIR='/shared_data/static'
WORKDIR $STATIC_DIR
RUN wget https://bootstrapmade.com/content/templatefiles/NiceAdmin/NiceAdmin.zip && \
    unzip NiceAdmin.zip && \
    rm NiceAdmin.zip && \
    mv NiceAdmin/assets .

COPY ./src/api/start_dev.sh /api/start_dev.sh

# expose ports and run application
WORKDIR $APP_DIR
ENV PYTHONUNBUFFERED=1
EXPOSE 8080
CMD bash ./start_dev.sh
